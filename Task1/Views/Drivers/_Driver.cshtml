@model Task1.DTOs.DriverDTO

@{
	string action = ViewBag.Action ?? string.Empty;
}

@section title {
	@if (Model != null)
	{
		<h3>Driver: @Model.Name</h3>
	}
}

<form method="post" asp-controller="drivers" asp-action="@action" class="col-md-6">
	@if (action?.ToLower() == "edit")
	{
		<input type="hidden" asp-for="Id" />
	}
		<div class="text-danger" asp-validation-summary="All"></div>

	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Name" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<input type="text" asp-for="Name" class="form-control" />
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="Name"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Start" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<input type="date" asp-for="Start" class="form-control" min="2" />
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="Start"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="End" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<input type="date" asp-for="End" class="form-control" />
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="End"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="CurOrPre" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<select asp-for="CurOrPre" class="form-control">
						<option value="Current">Current</option>
						<option value="Previous">Previous</option>
			</select>
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="CurOrPre"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-2">
			<input type="submit" class="btn btn-primary" value="Save" />
		</div>
		<div class="col-6">
		</div>
	</div>
</form>
